@model VeiculosVenda.Models.Veiculo

@{
    ViewData["Title"] = "Excluir Veículo";
}

<h1>Excluir</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
            @Html.DisplayFor(model => model.Modelo)
            @Html.DisplayFor(model => model.Ano)
            @Html.DisplayFor(model => model.Placa)
            @Html.DisplayFor(model => model.Km)
            @Html.DisplayFor(model => model.Cor)
            @Html.DisplayFor(model => model.Opcional)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
